<div class="container-fluid">
  <div class="row py-4">
    <div class="col-12">
      <h2>Add New Product</h2>
      <hr>
      <br>
    </div>
    <div class="col-12 mx-md-auto">
      <form method="POST" action="/products/new" enctype="multipart/form-data">
        <div class="form-group">
          <label class="d-block bold">Product Name:</label>
          <input type="text" name="name" class="form-control">
        </div>
        <div class="form-group">
          <label class="d-block bold">Product Description:</label>
          <textarea name="description" class="form-control"></textarea>
        </div>
        <div class="row form-inline d-flex">
            <label class="col-lg-3 col-md-4 col-sm-6 d-inline-block bold">Quantity:
              <input type="number" name="quantity" class="form-control">
            </label>
            <label class="col-lg-3 col-md-4 d-inline-block bold">Regular Price:
              <input type="number" name="regularPrice" class="form-control">
            </label>
            <label class="col-lg-3 col-md-4 d-inline-block bold">Selling Price:
              <input type="number" name="sellingPrice" class="form-control">
            </label>
            <label class="col-lg-3 col-md-4 d-inline-block bold">Order Limit:
              <input type="number" name="orderLimit" class="form-control">
            </label>
        </div>
        <br>
        <hr>
        <p class="lead">Optional: </p>          
        <div class="row form-inline d-flex py-2 ">
          <label class="col-sm-6 d-inline-block bold">Color:
            <input type="text" name="color" class="form-control">
          </label>
          <label class="col-sm-6 d-inline-block bold">Size:
            <input type="number" name="size" class="form-control">
          </label>
        </div>
        <hr>
        <br>
        <div class="form-group">
          <label class="d-block bold">Category:</label>
          {{#each categories}}
          <label class="mr-2"><input type="radio" name="category" value="{{this.name}}">{{this.name}}</label>
          {{/each}}
        </div>
        <div class="form-group">
          <label class="d-block bold">Product Image:</label>
          <input type="file" name="image" class="form-control" accept=".jpg, .png, .jpeg, .gif">
          <span>Accepts only PNG, JPG, JPEG, GIF image formats.</span>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>