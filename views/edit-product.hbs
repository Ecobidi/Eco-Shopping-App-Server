<div class="container-fluid">
  <div class="row py-4">
    <div class="col-12">
      <h2>Edit Product</h2>
      <hr>
      <br>
    </div>
    <div class="col-12 mx-md-auto">
      <form method="POST" enctype="multipart/form-data" action="/products/edit?_id={{product._id}}{{#each product.image}}&oldImage={{this}}{{/each}}" >
        <div class="form-group">
          <label class="d-block bold">Product Name:</label>
          <textarea name="name" rows="1" class="form-control">{{product.name}}</textarea>
        </div>
        <div class="form-group">
          <label class="d-block bold">Product Description:</label>
          <textarea name="description" class="form-control">{{product.description}}</textarea>
        </div>
        <div class="row form-inline d-flex">
            <label class="col-lg-3 col-md-4 col-sm-6 d-inline-block bold">Quantity:
              <input type="number" name="quantity" class="form-control" value={{product.quantity}}>
            </label>
            <label class="col-lg-3 col-md-4 d-inline-block bold">Regular Price:
              <input type="number" name="regularPrice" class="form-control" value={{product.regularPrice}}>
            </label>
            <label class="col-lg-3 col-md-4 d-inline-block bold">Selling Price:
              <input type="number" name="sellingPrice" class="form-control" value={{product.sellingPrice}}>
            </label>
            <label class="col-lg-3 col-md-4 d-inline-block bold">Order Limit:
              <input type="number" name="orderLimit" class="form-control" value={{product.orderLimit}}>
            </label>
        </div>
        <br>
        <hr>
        <p class="lead">Optional: </p>          
        <div class="row form-inline d-flex py-2 ">
          <label class="col-sm-6 d-inline-block bold">Color:
            <input type="text" name="color" class="form-control" value={{product.color}}>
          </label>
          <label class="col-sm-6 d-inline-block bold">Size:
            <input type="number" name="size" class="form-control" value={{product.size}}>
          </label>
        </div>
        <hr>
        <br>
        <div class="form-group">
          <label class="d-block bold">Category:</label>
          {{#each categories}}
          <label class="mr-2"><input type="radio" name="category" value="{{this.name}}">{{this.name}}</label>
          {{/each}}
        </div>
        <div class="form-group">
          <label class="d-block bold">Product Image:</label>
          <input multiple="multiple" type="file" name="image" class="form-control" accept=".jpg, .png, .jpeg, .gif">
          <span>Accepts only PNG, JPG, JPEG, GIF image formats.</span>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>